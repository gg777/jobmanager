{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Candidatures</a>
                </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Candidatures list</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Candidature</th>
                                    <th>Rejected</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for candidatejob in candidatejobs %}
                                    <tr>
                                        {#<td>{{ candidatejob.id }}</td>#}
                                        <td>{{ candidatejob.createdDate|date('d/m/Y') }}</td>
                                        <td>{{ candidatejob.isApplied }}</td>
                                        <td>{{ candidatejob.isRejected }}</td>
                                        {#<td>#}
                                            {#<a href="{{ path('admin_candidatejob_view', {'id': candidatejob.id}) }}">View</a>#}
                                        {#</td>#}
                                        {#<td>#}
                                            {#<a href="{{ path('admin_candidatejob_edit', {'id': candidatejob.id}) }}">Edit</a>#}
                                        {#</td>#}
                                        {#<td>#}
                                            {#<a href="{{ path('admin_candidatejob_delete', {'id': candidatejob.id}) }}">Delete</a>#}
                                        {#</td>#}
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}
{% block javascript %}

    {% javascripts output='js/main.js' filter='cssrewrite, ?yui_js'
    '@JobmanagerAdminBundle/Resources/public/js/AdminLTE/dashboard.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}

{% endblock %}