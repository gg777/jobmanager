{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Companies</a>
                </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Company list</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Company</th>
                                    <th>City</th>
                                    <th>Gender</th>
                                    <th>Firstname</th>
                                    <th>Lastname</th>
                                    <th>Voir</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for company in companies %}
                                    <tr>
                                        <td>{{ company.id }}</td>
                                        <td>{{ company.name }}</td>
                                        <td>{{ company.city }}</td>
                                        <td>
                                            {% if company.recruiter %}
                                                {{ company.recruiter.gender }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if company.recruiter %}
                                                {{ company.recruiter.firstname }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if company.recruiter %}
                                                {{ company.recruiter.lastname }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_company_view', {'id': company.id}) }}">Voir</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_company_edit', {'id': company.id}) }}">Modifier</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_company_delete', {'id': company.id}) }}">Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}