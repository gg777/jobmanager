{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="/"><i class="fa fa-dashboard"></i> Home</a>
                </li>
                <li class="active">Rappels</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Recalls list</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Date</th>
                                    <th>Gender</th>
                                    <th>Lastname</th>
                                    <th>Tel</th>
                                    <th>Is recalled</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for recall in recalls %}
                                    <tr>
                                        <td>{{ recall.id }}</td>
                                        <td>{{ recall.createdDate|date('Y-m-d H:i') }}</td>
                                        <td>{{ recall.recruiter.gender }}</td>
                                        <td>{{ recall.recruiter.lastName }}</td>
                                        <td>{{ recall.recruiter.tel }}</td>
                                        <td>{{ recall.isRecalled }}</td>
                                        <td>
                                            <a href="{{ path('admin_recall_view', {'id': recall.id}) }}">View</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_recall_edit', {'id': recall.id}) }}">Edit</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_recall_delete', {'id': recall.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}