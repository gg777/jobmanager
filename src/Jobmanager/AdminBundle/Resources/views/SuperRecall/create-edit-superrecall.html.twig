{# src/Jobmanager/AdminBundle/Resources/views/Recall/create-edit-recall.html.twig #}

{% extends "JobmanagerAdminBundle::layout.html.twig" %}

{% block title %}
    Ajouter un rappel - {{ parent() }}
{% endblock %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Home</a>
                </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <form method="POST" {{ form_enctype(form) }}>
                    <div class="col-md-6">
                        <div class="box box-warning">
                            <div class="box-header">
                                <h3 class="box-title">Description du rappel</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">

                                {% include "JobmanagerAdminBundle:SuperRecall:superrecall-form.html.twig" %}

                            </div><!-- /.box-body -->
                        </div><!-- /.box -->
                    </div>
                </form>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->


{% endblock %}

{% block javascript %}

    <!-- jQuery 2.0.2 -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    {% javascripts output='js/main.js' filter='cssrewrite, ?yui_js'
    '@JobmanagerAdminBundle/Resources/public/js/jquery-ui-1.10.3.min.js'
    '@JobmanagerAdminBundle/Resources/public/js/bootstrap.min.js'
    '@JobmanagerAdminBundle/Resources/public/js/plugins/iCheck/icheck.min.js'
    '@JobmanagerAdminBundle/Resources/public/js/plugins/datatables/jquery.dataTables.js'
    '@JobmanagerAdminBundle/Resources/public/js/plugins/datatables/dataTables.bootstrap.js'
    '@JobmanagerAdminBundle/Resources/public/js/AdminLTE/app.js'
    '@JobmanagerAdminBundle/Resources/public/js/superrecall-form.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}

{% endblock %}