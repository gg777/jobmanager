{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Projets</a>
                </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Projets</h3>
                            <p style="clear: both; padding-left: 10px;">Liste des projets.</p>

                            <a href="{{ path('admin_project_create') }}" class="btn btn-primary" style="display: block; width: 100px; margin-left: 10px; margin-top: 20px;">Ajouter</a>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for project in projects %}
                                    <tr>
                                        <td>{{ project.id }}</td>
                                        <td>{{ project.name }}</td>
                                        <td>
                                            <a href="{{ path('admin_project_view', {'id': project.id}) }}">Voir</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_project_edit', {'id': project.id}) }}">Modifier</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_project_delete', {'id': project.id}) }}">Supprimer</a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}