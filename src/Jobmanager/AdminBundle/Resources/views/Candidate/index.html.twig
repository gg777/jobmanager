{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Candidats</a>
                </li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Candidats list</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Gender</th>
                                    <th>Firstname</th>
                                    <th>Lastname</th>
                                    <th>Tel</th>
                                    <th>Email</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for candidate in candidates %}
                                    <tr>
                                        <td>{{ candidate.id }}</td>
                                        <td>{{ candidate.gender }}</td>
                                        <td>{{ candidate.firstname }}</td>
                                        <td>{{ candidate.lastname }}</td>
                                        <td>{{ candidate.tel }}</td>
                                        <td>{{ candidate.email }}</td>
                                        <td>
                                            <a href="{{ path('admin_candidate_view', {'id': candidate.id}) }}">View</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_candidate_edit', {'id': candidate.id}) }}">Edit</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_candidate_delete', {'id': candidate.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}
{% block javascript %}

    {% javascripts output='js/main.js' filter='cssrewrite, ?yui_js'
    '@JobmanagerAdminBundle/Resources/public/js/AdminLTE/dashboard.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}

{% endblock %}