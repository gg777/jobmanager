{% extends 'JobmanagerAdminBundle::layout.html.twig' %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <a href="/"><i class="fa fa-dashboard"></i> Home</a>
                </li>
                <li class="active">Rdv</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Meetings list</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body table-responsive">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Begin</th>
                                    <th>End</th>
                                    <th>Job</th>
                                    <th>View</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for meeting in meetings %}
                                    <tr>
                                        <td>{{ meeting.id }}</td>
                                        <td>{{ meeting.name }}</td>
                                        <td>
                                            {% if meeting.dateBegin %}
                                                {{ meeting.dateBegin|date('d/m/Y') }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if meeting.dateEnd %}
                                                {{ meeting.dateEnd|date('d/m/Y') }}
                                            {% endif %}
                                        </td>
                                        <td>{{ meeting.candidateJob.name }}</td>
                                        <td>
                                            <a href="{{ path('admin_meeting_view', {'id': meeting.id}) }}">View</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_meeting_edit', {'id': meeting.id}) }}">Edit</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_meeting_delete', {'id': meeting.id}) }}">Delete</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->
{% endblock %}