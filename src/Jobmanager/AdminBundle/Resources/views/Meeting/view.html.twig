{# src/Jobmanager/AdminBundle/Resources/views/Meeting/view.html.twig #}

{% extends "JobmanagerAdminBundle::layout.html.twig" %}

{% block title %}
    Voir un rdv - {{ parent() }}
{% endblock %}

{% block content %}
    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Dashboard
                <small>home</small>
            </h1>
            <ol class="breadcrumb">
                <li class="active">
                    <a href="/"><i class="fa fa-dashboard"></i> Home</a>
                </li>
                <li>
                    <a href="{{ path('admin_meeting_index') }}">Rdv</a>
                </li>
                <li class="active">View</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">

                <div class="col-md-6">
                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">Description du rdv</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <h1>{{ meeting.name }}</h1>
                            <h2>Infos</h2>
                            <p>
                                Date begin : {% if meeting.dateBegin %}
                                    {{ meeting.dateBegin|date('Y-m-d H:i') }}
                                {% endif %}
                            </p>
                            <p
                                    Date end : {% if meeting.dateEnd %}
                                    {{ meeting.dateEnd|date('Y-m-d H:i') }}
                                {% endif %}
                            </p>
                            <p>{{ meeting.description }}</p>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>

            </div>
        </section><!-- /.content -->
    </aside><!-- /.right-side -->


{% endblock %}